
@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "All Users ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Users </h1>
<br />
<br />

@*Search*@
<div class="row justify-content-center align-items-center mt-5">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="text" class="form-control" name="Email " placeholder="Search By Email" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>

@if (Model.Count() > 0)
{
    <table class="mt-3 table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(U => U.Id)</th>
                <th>@Html.DisplayNameFor(U => U.FName)</th>
                <th>@Html.DisplayNameFor(U =>U.LName)</th>
                <th>@Html.DisplayNameFor(U => U.Email)</th>
                <th>@Html.DisplayNameFor(U => U.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(U => U.Roles)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var User in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(U =>User.Id )  </td>
                    <td>@Html.DisplayFor(U =>User.FName )  </td>
                    <td>@Html.DisplayFor(U =>User.LName )  </td>
                    <td>@Html.DisplayFor(U =>User.Email )  </td>
                    <td>@Html.DisplayFor(U =>User.PhoneNumber )  </td>
                    <td>@string.Join(" " ,User.Roles) </td>
                
                    <partial name="_ButtonsPartial" model="@User.Id" />
                 
                </tr>
            }
        </tbody>
    </table>
}


else
{
    <div class="mt-4 alert alert-warning">
        <h3>there Is No Users </h3>
    </div>
}