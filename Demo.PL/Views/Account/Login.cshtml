@model LoginViewModel 
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
<div class="agileits-top">
	<div asp-validation-summary="ModelOnly"></div>
	<form asp-action="Login" method="post">
	
		<input class="text email" asp-for="Email" placeholder="Email" required="">
		<input class="text" asp-for="Password" placeholder="Password" required="">

		<div class="wthree-text">
			<label class="anim">
				<input asp-for="RemeberMe" class="checkbox" >
				<span>Remember Me?</span>
			</label>
			<div class="clear"> </div>
		</div>
		<input type="submit" value="SIGNIN">
	</form>
	<p>Don't  have an Account? <a asp-action="Register"> Register Now!</a></p>
	<p> <a asp-action="ForgetPassword">Forget Password?</a></p>
</div>
</div>

